<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>addtask</servlet-name>
        <servlet-class>todolist.addtask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginvalidate</servlet-name>
        <servlet-class>todolist.loginvalidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>todolist.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>todolist.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deletetask</servlet-name>
        <servlet-class>todolist.deletetask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editt</servlet-name>
        <servlet-class>todolist.editt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addtask</servlet-name>
        <url-pattern>/addtask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginvalidate</servlet-name>
        <url-pattern>/loginvalidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deletetask</servlet-name>
        <url-pattern>/deletetask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editt</servlet-name>
        <url-pattern>/editt</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
